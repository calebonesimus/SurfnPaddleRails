.headline {
  color: white;
}

#posts.index .header-image {
  background-image: image_url("space_1.jpg");
}

.article-image-list {
  list-style-type: none;
  margin: 0px;
  padding: 0px;

  li {
    display: inline-block;
  }
}

.article-images {
  position: relative;
  overflow: hidden;
  width: 250px;
  height: 250px;
}

.social-nav {
  list-style-type: none;
  padding: 0;
  margin: 0;

  li {
    display: inline-block;
  }

  li+li {
    padding-left: 4px;
    border-left: 1px solid #666;
  }

}
